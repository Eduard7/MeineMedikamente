<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cons_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".activities.PressureActivity">

    <TextView
        android:id="@+id/textView16"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/gruppo"
        android:text="@string/syst"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/gruppo"
        android:text="@string/diat"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/gruppo"
        android:paddingEnd="8dp"
        android:paddingStart="2dp"
        android:text="@string/chartLablePuls"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/gruppo"
        android:text="@string/chartLableSys"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/gruppo"
        android:text="@string/chartLableDia"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/gruppo"
        android:text="@string/pulst"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <EditText
        android:id="@+id/sys_text"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:fontFamily="@font/gruppo"
        android:hint="@string/set0"
        android:inputType="number"
        android:nextFocusDown="@id/dia_text"
        android:textAlignment="textEnd"
        android:textColor="@android:color/background_light"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="0" />

    <EditText
        android:id="@+id/dia_text"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:fontFamily="@font/gruppo"
        android:hint="@string/set0"
        android:inputType="number"
        android:nextFocusDown="@id/pulse_text"
        android:textAlignment="viewEnd"
        android:textColor="@android:color/background_light"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="0" />

    <EditText
        android:id="@+id/pulse_text"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:fontFamily="@font/gruppo"

        android:hint="@string/set0"
        android:inputType="number"
        android:textAlignment="viewEnd"
        android:textColor="@android:color/background_light"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView18"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="0" />


    <TextView
        android:id="@+id/average_sys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="170dp"
        android:fontFamily="@font/gruppo"
        android:textAlignment="textEnd"
        android:textColor="@android:color/background_light"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView16"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/set0" />

    <TextView
        android:id="@+id/average_dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="170dp"
        android:fontFamily="@font/gruppo"
        android:textAlignment="textEnd"
        android:textColor="@android:color/background_light"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView17"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/set0" />

    <TextView
        android:id="@+id/average_puls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="170dp"
        android:fontFamily="@font/gruppo"
        android:textAlignment="textEnd"
        android:textColor="@android:color/background_light"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/set0" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_pressures"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:breakStrategy="high_quality"

        android:ellipsize="marquee"
        android:fontFamily="@font/gruppo"
        android:text="@string/blutdrukk"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/button_graph"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/gruppo"
        android:text="@string/avg"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagePopup" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/gruppo"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pulse_text" />

    <ImageView
        android:id="@+id/imageViewPersonIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="64dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/die"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/person_icon_man_blue" />

    <Button
        android:id="@+id/button_calendar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/calendar_icons_blue"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pressure_datum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/gruppo"
        android:text=""
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        tools:text="12.12.1900" />

    <Button
        android:id="@+id/button_person"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/die"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewPersonIcon" />

    <TextView
        android:id="@+id/max_sys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="90dp"
        android:fontFamily="@font/gruppo"
        android:textAlignment="textEnd"
        android:textColor="@android:color/background_light"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/average_sys"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/set0" />

    <TextView
        android:id="@+id/max_dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="90dp"
        android:fontFamily="@font/gruppo"
        android:textAlignment="textEnd"
        android:textColor="@android:color/background_light"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/average_dia"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/set0" />

    <TextView
        android:id="@+id/min_sys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/gruppo"
        android:textAlignment="textEnd"
        android:textColor="@android:color/background_light"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/max_sys"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/set0" />

    <TextView
        android:id="@+id/min_dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/gruppo"
        android:textAlignment="textEnd"
        android:textColor="@android:color/background_light"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/max_dia"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/set0" />

    <TextView
        android:id="@+id/min_puls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/gruppo"
        android:textAlignment="textEnd"
        android:textColor="@android:color/background_light"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/max_puls"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/set0" />

    <TextView
        android:id="@+id/max_puls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="90dp"
        android:fontFamily="@font/gruppo"
        android:textAlignment="textEnd"
        android:textColor="@android:color/background_light"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/average_puls"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/set0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/die"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/recycler_view_pressures"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/average_puls"
        app:srcCompat="@drawable/hvit_ramme" />

    <TextView
        android:id="@+id/textViewAvg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:clickable="false"
        android:focusable="false"
        android:fontFamily="@font/gruppo"
        android:text="@string/avg"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/average_sys"
        app:layout_constraintEnd_toEndOf="@+id/average_sys" />

    <TextView
        android:id="@+id/textViewMax"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/action_weiter_button"
        android:fontFamily="@font/open_sans_light"
        android:paddingBottom="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp"
        android:text="@string/maximum"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/max_sys"
        app:layout_constraintEnd_toEndOf="@+id/max_sys" />

    <TextView
        android:id="@+id/textViewMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/action_weiter_button"
        android:fontFamily="@font/open_sans_light"
        android:paddingBottom="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp"
        android:text="@string/minimum"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/min_sys"
        app:layout_constraintEnd_toEndOf="@+id/min_sys" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/die"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMax"
        app:srcCompat="@drawable/hvit_ramme" />

    <Button
        android:id="@+id/button_graph"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/graph_icon_blue"
        app:layout_constraintEnd_toStartOf="@+id/imageViewPersonIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/die"
        app:layout_constraintEnd_toEndOf="@+id/button_save"
        app:layout_constraintTop_toTopOf="@+id/button_save"
        app:srcCompat="@drawable/round_save_icon" />

    <Spinner
        android:id="@+id/pressure_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/background_light"
        android:entries="@array/pressuretime"
        android:fontFamily="@font/gruppo"

        android:popupBackground="@drawable/popup_background"
        app:layout_constraintBottom_toTopOf="@+id/sys_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_calendar" />

    <ImageView
        android:id="@+id/user_ab_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="2dp"
        android:contentDescription="@string/die"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:srcCompat="@drawable/user_a_icon" />

    <ImageView
        android:id="@+id/imagePopup"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="28dp"
        android:clickable="true"
        android:contentDescription="@string/die"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18"
        app:srcCompat="@drawable/ic_more_vert_black_24dp" />

</android.support.constraint.ConstraintLayout>